<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="@dimen/dp_81"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_grid_data_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_grid_data_value_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#307ED5"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/item_grid_data_value_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#307ED5"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_grid_data_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#858585"
        android:textSize="@dimen/sp_16" />
</LinearLayout>