<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="@dimen/dp_10">
        <shape>
            <stroke
                android:width="@dimen/dp_1"
                android:color="#3e89dd" />
            <solid android:color="#DBDBDB" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress" android:height="@dimen/dp_10">
        <clip>
            <shape>
                <stroke
                    android:width="@dimen/dp_1"
                    android:color="#3e89dd" />
                <solid android:color="@color/white" />
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress" android:height="@dimen/dp_10">
        <clip>
            <shape>
                <stroke
                    android:width="@dimen/dp_1"
                    android:color="#3e89dd" />
                <solid android:color="@color/white" />
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>
</layer-list>

