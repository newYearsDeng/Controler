<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="control_text_default_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="control_air_conditioner_style">
        <item name="android:layout_width">@dimen/dp_65</item>
        <item name="android:layout_height">@dimen/dp_65</item>
    </style>

    <style name="choose_mode_text_style">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">#ff727272</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="choose_icon_style">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">@dimen/dp_40</item>
    </style>
</resources>
