<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_blue_radial"
        android:paddingBottom="@dimen/dp_100"
        android:paddingTop="@dimen/dp_100">

        <com.jmesh.appbase.ui.widget.JmeshDraweeView
            android:id="@+id/control_meter_data_icon"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:layout_gravity="center"
            app:placeholderImage="@mipmap/icon_control_transparent" />
    </FrameLayout>

    <com.jmesh.controler.ui.widget.GridDataContainer
        android:id="@+id/control_meter_data_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white" />

    <TextView
        android:id="@+id/control_meter_update_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:textColor="#858585"
        android:textSize="@dimen/dp_11" />

    <Button
        android:id="@+id/tiaozha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳闸" />

    <Button
        android:id="@+id/hezha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合闸" />
</LinearLayout>